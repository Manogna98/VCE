<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nishant.vce.selection"
    android:background="@color/windowBackground">>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="294dp"
        android:layout_height="42dp"
        android:text="Choose your section:"
        android:textSize="23dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:visibility="visible"
        android:textColor="@color/buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/radioButton"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="212dp"
        android:layout_height="30dp"
        android:text="Section A"
        android:backgroundTint="@color/buttons"
        android:textSize="19dp"
        android:textAlignment="center"
        android:textColor="@color/buttons"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/radioButton2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="210dp"
        android:layout_height="31dp"
        android:text="Section B"
        android:layout_marginRight="8dp"
        android:textColor="@color/buttons"
        android:backgroundTint="@color/buttons"
        android:textSize="19dp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="@+id/radioButton"
        app:layout_constraintLeft_toLeftOf="@+id/radioButton"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
