<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nishant.vce.NextActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@color/windowBackground">

    <EditText
        android:id="@+id/editTextEmail2"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:backgroundTint="@color/buttons"
        android:textColor="@color/buttons"
        android:textColorHint="@color/buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"
        app:layout_constraintHorizontal_bias="0.502"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/buttons"
        android:backgroundTint="@color/buttons"
        android:textColor="@color/buttons"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="214dp"
        android:layout_marginStart="40dp" />


    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:text="login"
        android:backgroundTint="@color/buttons"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="@+id/editTextPassword2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/editTextPassword2"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="98dp"
        android:layout_marginStart="71dp" />

</android.support.constraint.ConstraintLayout>
